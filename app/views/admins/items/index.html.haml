%h1 商品管理

- if current_user.admin?
  = link_to '商品の追加', new_admins_item_path, class: 'btn btn-primary'

- @items.each do |item|
  .card{style:"width: 20rem;"}
    - if item.image.present?
      %img{class: "card-img-top", src:item.image}
    - else
      %svg.bd-placeholder-img.card-img-top{width:"100%",
       height:"180",
       xmlns:"http://www.w3.org/2000/svg",
       preserveAspectRatio:"xMidYMid slice",
       focusable:"false",
       role:"img" }
        %title プレースホルダ
        %rect{fill:"#868e96", width: "100%", height: "100%"}
        %text{fill:"#dee2e6", dy:".3em", x:"40%", y:"50%"}
          画像なし
    .card-body
      %h5.card-title= item.name
      %p.card-text= item.description
      =render 'admins/items/move_positions', item: item
      =link_to '編集', edit_admins_item_path(item)
      =link_to '削除', admins_item_path(item), method: :delete, data: {confirm: '削除しますか？'}
